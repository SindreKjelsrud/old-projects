---
import HeadCommon from "../components/HeadCommon.astro";
import { SITE } from "../config";

const navItems = [
	{
		title: 'Machines',
		description: 'Some information about machines.',
		url: '/machines/kanto',
		img: '/machines.png'
	},
	{
		title: 'Instructions',
		description: 'Instructions I made for myself.',
		url: '/instructions/wireguard',
		img: '/instructions.png'
	},
	{
		title: 'Services',
		description: 'Various services I have created and a bit documentation of.',
		url: '/services/sidbot',
		img: '/services.png'
	}
]

---
<head>
	<HeadCommon />
	<title>Sidskipedia</title>
</head>

<div class=" bg-gradient-to-br from-slate-700 to-black min-h-screen text-center">
	<header class="pt-12 pb-24 px-4">
		<div class="flex items-center justify-center p-4">
			<img src="/favicon.png" alt="Book from The Library of Ohara">
		</div>
		<h1 class=" text-white text-4xl font-medium drop-shadow-sm">{SITE.title}</h1>
		<p class="text-lg mt-4 text-slate-300">{SITE.description}</p>
		<nav>
			<ul class="flex gap-4 max-w-5xl mx-auto text-left mt-12">
			{
				navItems.map(({ title, description, url, img }) => (
					<a href={url} class="flex flex-col bg-white rounded-md hover:-translate-y-1 hover:shadow-lg transition-all flex-1 items-center p-4">
						<img src={img} alt={title}>
						<h2 class="text-lg font-medium">{title}</h2>
						<p class="text-slate-500">{description}</p>
					</a>
				))
			}
			</ul>
		</nav>
	</header>
</div>

<script is:inline>
</script>
